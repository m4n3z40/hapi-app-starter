{
  "name": "hapi-app-starter",
  "version": "0.0.1",
  "description": "A Hapi application boilerplate",
  "main": "src/index.js",
  "scripts": {
    "test": "jasmine-node ./test",
    "lint": "eslint . --cache",
    "start": "nodemon src/index.js",
    "build": "babel src --out-dir build",
    "built-server": "npm run build && naught start --worker-count 3 build/index.js",
    "built-server:stop": "naught stop"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/m4n3z40/hapi-app-starter.git"
  },
  "keywords": [
    "hapi",
    "api",
    "js",
    "service",
    "server"
  ],
  "author": "Allan Baptista (allan.baptista@ymail.com)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m4n3z40/hapi-app-starter/issues"
  },
  "homepage": "https://github.com/m4n3z40/hapi-app-starter#readme",
  "dependencies": {
    "hapi": "^12.0.0",
    "joi": "^7.1.0",
    "naught": "^1.6.0"
  },
  "devDependencies": {
    "babel-cli": "^6.3.17",
    "babel-plugin-transform-class-properties": "^6.3.13",
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-register": "^6.3.13",
    "eslint": "^1.10.3",
    "eslint-config-airbnb": "^3.0.0",
    "frisby": "^0.8.5",
    "jasmine-node": "^1.14.5",
    "nodemon": "^1.8.1"
  }
}
